		<tr class="field"><td class="label">	
		  	<label class="inline-label" for="outcome_is_primary">Is this a primary outcome?</label>
			</td><td class='input'>
		    <%# f.select :is_primary, [["Yes", true], ["No", false]], {}, {:class => "editable_field", :title => "Is this a primary outcome?"} %>
