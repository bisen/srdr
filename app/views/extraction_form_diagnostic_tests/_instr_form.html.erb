<div id="validation_message_arms">
<%= render "layouts/modal_info_messages" %>
</div>

<%= form_for @extraction_form_diagnostic_test_instr, :remote=>true do |f|%>
    <%= hidden_field_tag "section", @section %>
    <%= hidden_field_tag "data_element", @data_element %>
    <%= hidden_field_tag "extraction_form_id", @extraction_form.id %>

    <div class='field'>
        <label for="Arms Instructions">Diagnostic Test Instructions</label><br/>
        <%= f.text_area "instructions", :cols => 50, :rows => 4, :class => "editable_field", :tabindex => 2, :title => "instructions" %>
    </div>
		
    <div class='actions'>
        <% if @editing %>
        <button type='submit' class='positive' data-disable-with="<%= ajax_wait_msg %>" tabindex="3">
	    <%= image_tag "Add.png", :alt => "Add"  %>Save Edits
        </button>
        <% else %>
        <button type='submit' class='positive' data-disable-with="<%= ajax_wait_msg %>" tabindex="3">
            <%= image_tag "Add.png", :alt => "Add"  %>Save
        </button>
        <% end %>
        <button class="negative" id="add_diagnostics_instr_close" tabindex="4">
            <%= image_tag "Cancel.png", :alt => "Cancel" %>Cancel
        </button>
    </div>
<% end %>	

<script type="text/javascript">

$("#add_diagnostics_instr_close").bind("click", function(event)
{
    event.preventDefault();
    $('#new_diagnostic_tests_instr_entry').dialog('close');
});

</script>