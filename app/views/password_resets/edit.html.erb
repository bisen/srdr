<div id='left-navigation-div' tabindex=100>
</div>
<div id='content' tabindex=200>
<h1>Change Your Password</h1>

<br/>

<% form_for @user, :url => password_reset_path, :method => :put do |f| %>
<table class="form_table" id="password_resets_edit_table" summary="password resets edit table">
<tr>
<td class="label">
  <%= f.label :password%>
  </td>
  <td>
  <%= f.password_field :password, :title => "password" %>
  </td>
</tr>
<tr><td class="label">
  <%= f.label :password_confirmation %>
  </td>
  <td>
  <%= f.password_field :password_confirmation, :title => "password confirmation" %>
  </td>
  </tr>
<tr height="10"></tr>
<tr><td colspan="2" class="actions" style="text-align:right">
  		<button type="submit" class="positive">
			<%= image_tag "Accept.png", :alt => "Accept" %>Update My Password and Log Me In
		</button>
</td>
</tr></table>
<% end %>
</div>