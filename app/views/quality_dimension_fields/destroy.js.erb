var str = "<%= @has_study_data %>" ;
var has_study_data = (str === 'true');
if(has_study_data)
	{
		var message = "One or more studies have been created that use this data item. Removing this data item will remove it for these studies as well. Are you sure you want to continue?";
		if (confirm(message))
		{
			<% @quality_dimension_field.destroy %>
			<% @quality_dimension_fields = QualityDimensionField.where(:extraction_form_id => @extraction_form.id, :study_id => nil).all %>			
			$("#quality_dimension_fields_table").html("<%= escape_javascript(render :partial => "quality_dimension_fields/table") %>");
			$("#removed_item_indicator_dim").show().delay(500).fadeOut(300);
			$("#validation_message_dim").html("");			
		}
	}
	else{
		var message = "Are you sure you want to delete this column?";
		if (confirm(message))
		{	
			<% @quality_dimension_field.destroy %>
			<% @quality_dimension_fields = QualityDimensionField.where(:extraction_form_id => @extraction_form.id, :study_id => nil).all %>			
			$("#quality_dimension_fields_table").html("<%= escape_javascript(render :partial => "quality_dimension_fields/table") %>");
			$("#removed_item_indicator_dim").show().delay(500).fadeOut(300);
			$("#validation_message_dim").html("");		
		}
	}