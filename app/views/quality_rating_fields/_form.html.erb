<div id="validation_message_rtg">
<%= render "layouts/modal_info_messages" %>
</div>

<%= form_for(@quality_rating_field, :remote => true, :html => {:id => "quality_rating_fields_form"}) do |f| %>


	  <%= hidden_field_tag :extraction_form_id, @extraction_form.id %>
	  <%= f.hidden_field :extraction_form_id, :value => @extraction_form.id %>
	
	
	<% if @editing_rtg %>
		 To change the current rating item, edit the value in the box:<br/>
	<% else %>
		 To extend the rating scale, add a value in the box:<br/>	
	<% end %>
	<table class='form_table'>
		<tr>
			<td class='label'>
	  	    	<label for="Rating Item">Rating Item:</label>
			</td>
			<td class='input'>
				<%= f.text_field :rating_item, :class => "inline-field editable_field", :title => "quality rating item" %>
			</td>
		</tr>
	</table>
	<br/><br/><br/><br/>
	<div class="actions">
	<% if @editing_rtg %>
		<button type="submit" class="positive" data-disable-with="<%= ajax_wait_msg %>" ><%= image_tag "Add.png", :alt => "Add"  %>Save Edits</button>				
	<% else %>
		<button type="submit" class="positive" data-disable-with="<%= ajax_wait_msg %>" ><%= image_tag "Add.png" , :alt => "Add" %>Add New Item</button>				
	<% end %>

		<button class="negative" id="close_rtg_btn" >
		<%= image_tag "Cancel.png", :alt => "Cancel" %>Cancel
		</button>
	</div>

<% end %>

<script type="text/javascript">

$("#close_rtg_btn").bind("click", function(event)
{
event.preventDefault();
$('#new_qr_entry').dialog('close');
});

</script>