<% if @saved %>

$("#secondary_publication_entry").html("<%= escape_javascript(render :partial=>'secondary_publications/form', :locals => {:secondary_publication=> @secondary_publication}) %>");
$("#secondary_publication_table").html("<%= escape_javascript(render :partial=>"secondary_publications/table", :locals => {:secondary_publications => @secondary_publications}) %>");
