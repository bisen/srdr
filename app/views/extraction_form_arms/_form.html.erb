<div id="validation_message_arms">
<%= render "layouts/modal_info_messages" %>
</div>

<%= form_for @extraction_form_arm, :remote=>true do |f|%>
	<%= hidden_field_tag "extraction_form_arm[extraction_form_id]", @extraction_form.id %>
	<%= hidden_field_tag "extraction_form_id", @extraction_form.id %>
	<%= hidden_field_tag "project_id", @project.id %>

		<table class='form_table tab-list-table'>
			<tr>
				<td class='label top'>
			<label for="Arm title">Arm Title:</label>
				</td>
				<td class='input top'>
			<%= f.text_field "name", :class => "editable_field", :tabindex => 1, :title => "title" %>
				</td>
			</tr>
			
			<tr>
				<td class='label'>
			<label for="Arm description">Arm Description:</label>
				</td>
				<td class='input'>
			<%= f.text_area "description", :cols => 50, :rows => 4, :class => "editable_field", :tabindex => 2, :title => "description" %>
				</td>
			</tr>
		</table>
		<!--<div class='field'>
			User Note:<br/>
			<%# f.text_area "note", :cols => 50, :rows => 1, :class => "editable_field" %>
		</div> -->
		<br clear='all'/><br/><br/><br/><br/>
		<div class='popup-footer actions'>
			<% if @editing %>
				<button type='submit' class='positive' data-disable-with="<%= ajax_wait_msg %>" tabindex="3">
					<%= image_tag "Add.png", :alt => "Add"  %>Save Edits
				</button>
			<% else %>
				<button type='submit' class='positive' data-disable-with="<%= ajax_wait_msg %>" tabindex="3">
					<%= image_tag "Add.png", :alt => "Add"  %>Save
				</button>
			<% end %>
				<button class="negative" id="add_arm_close" tabindex="4">
					<%= image_tag "Cancel.png", :alt => "Cancel" %>Cancel
				</button>
		</div>

<% end %>	

<script type="text/javascript">

$("#add_arm_close").bind("click", function(event)
{
event.preventDefault();
$('#new_arm_entry').dialog('close');
});

</script>