<% if @editing %>
  <h1>Your user profile</h1>
<% end %>
<br/><br/>
<%= form_for(@user) do |f| %>

	<table class="form_table register_table" id="user_profile_form_table" summary="user profile form table">
	<tr class="field">
		<td class="label">
		    <label>Username:</label>
		</td>
		<td>
				<%= @user.login %>
				<%= f.hidden_field :login %>
			    <%= f.hidden_field :user_type, :value => "member" %>
		</td>
	</tr>
	<tr class="field">
		<td class="label" for="user_fname">
		    <label>First Name:</label>
		</td><td>
		    <%= f.text_field :fname, :tabindex => 1, :title => "first name" %>
		</td>
	</tr>
	<tr class="field">
		<td class="label" for="user_lname">
	    	<label>Last Name:</label>
		</td>
		<td>
		    <%= f.text_field :lname, :tabindex => 2, :title => "last name" %>
		</td>
	</tr>
	<tr class="field">
		<td class="label" for="user_organization">
	    	<label>Organization:</label>
		</td>
		<td>
		    <%= f.text_field :organization, :tabindex => 3, :title => "organization" %>
		</td>
	</tr>
	 <tr class="field">
		<td class="label" for="user_email">
		    <label>Email:</label>
		</td>
		<td>
		    <%= f.text_field :email, :tabindex => 4, :title => "email" %>
		</td>
	</tr>
	<tr class="field">
		<td class="label" for='user_password'>
		    <label>Password:</label>
		</td>
		<td>
		    <%= f.password_field :password, :tabindex => 5, :title => "password" %>
		</td>
	</tr>
	<tr class="field">
		<td class="label">
		    <label for='user_password_confirmation'>Confirm Password:</label>
		</td>
		<td>
		    <%= f.password_field :password_confirmation, :tabindex => 6, :title => "password confirmation" %>
		</td>
	</tr>
	<tr>
		<td colspan=2 align=center>
		  <div class="actions buttons">
				<button type="submit" class="positive" data-disable-with='<%= ajax_wait_msg("Updating") %>'>
					<%= image_tag "Add.png", :alt => "Submit" %>Submit
				</button>
				<button class="negative" id='cancel_profile'><%= image_tag "Cancel.png", :alt=>"Cancel" %>Cancel</button>
		  </div>
		</td>
	</tr>
	</table>
<% end %>
<span id='page_end'></span>
