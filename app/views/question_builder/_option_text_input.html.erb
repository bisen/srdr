<%# HAS SUB: <%= @has_sub %>
<span  id='<%= "row_" + @row_id.to_s + "_div" %>'>
	Option: <%= text_field @page_name, "choice_" + @row_id.to_s, :class=>"question_option", :title => "question option" %> 
	<%= check_box_tag "gets_sub[#{@row_id.to_s}]", @row_id.to_s, true, :class=>'sq_assignment_cbox editable_field', :style=> @has_sub=="true" ? "display:inline;" : "display:none;", :title => "question option"%> 
	<% unless @row_id < 2 %>
		<%= link_to image_tag('Silk_cross.png'), url_for(:controller=>:question_builder, :action=>:remove_choice, :row_num=>@row_id), :remote=>true, :class=>'delete_column_link' %>
	<% end %>
	<br/>
</span>
