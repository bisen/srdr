<ul id="comments_section_<%= section_name.to_s %>_id_<%= section_id.to_s %>_field_<%= field_name %>_study_<%= study_id.to_s %>_project_<%= project_id.to_s %>" class="comment_open_menu">
	<li style='display:inline;'>
		 <span>
			<%= image_tag "Comment.png", :alt => "Comments" %> Comments (<div style="display:inline" id="comments_number_<%= section_name.to_s %>_id_<%= section_id.to_s %>_field_<%= field_name %>_study_<%= study_id.to_s %>_project_<%= project_id.to_s %>"><%= num_comments %></div>) |
		</span>
		<span class="flags_link_<%= section_name.to_s %>_id_<%= section_id.to_s %>_field_<%= field_name %>_study_<%= study_id.to_s %>_project_<%= project_id.to_s %>">
		<% if num_flags > 0 %>
			<%= image_tag "Flag_red.png", :alt => "This section has flags" %> Flags (<div style="display:inline" id="flags_number_<%= section_name.to_s %>_id_<%= section_id.to_s %>_field_<%= field_name %>_study_<%= study_id.to_s %>_project_<%= project_id.to_s %>"><%= num_flags %></div>) |
		<% end %>
		</span>
	</li>
	<li id="comments_li_<%= section_name.to_s %>_id_<%= section_id.to_s %>_field_<%= field_name %>_study_<%= study_id.to_s %>_project_<%= project_id.to_s %>" class="open_comments_link" style='display:inline;'>
		<span>
		Post/View
		</span>
	</li>
</ul>

