<% if defined?(current_user) && !current_user.nil? %>
<% show_both = User.current_user_is_collaborator(project_id,current_user) %>
<% else %>
<% show_both = false %>
<% end %>

<ul id="comments_summary_project_<%= project_id.to_s %>" class="comment_open_menu">

	<% if (Comment.get_number_of_project_flags(project_id, show_both) >0) && (Comment.get_number_of_project_comments(project_id, show_both) >0) %>
	
	<li id="comments_li_<%= project_id.to_s %>" class="open_comments_summary_link">
		 <span>
			<%= image_tag "Comment.png", :alt => "Comments" %> View Comments
		</span>
	</li>
	
	<% end %>

</ul>

